{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",

    /* Modules */
    "module": "nodenext",
    "rootDir": "src",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,

    /* Emit */
    "outDir": "build",
    "newLine": "lf",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
